<%-include('../includes/head')%>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%-include('../includes/navigation')%>

    <main>
        <div class="center-div">
            <h1>Add a book for sale</h1>
        </div>
        <div class="form-div">
            <form class="product-form" action="/admin/add-product" method="POST">
                <div class="form-control">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" required>
                    <label for="title">Author</label>
                    <input type="text" name="author" id="author" required>
                    <label for="price">Price</label>
                    <input type="number" min=0 step="0.01" name="price" id="price" required>
                    <label for="url">Image URL</label>
                    <input type="text" name="url" id="url">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" rows="10"></textarea>
                    <label for="Category">Category</label>
                    <select name="category" id="category" size=12 required>
                        <option value=1>Children Book</option>
                        <option value=2>Crime & Thriller</option>
                        <option value=3>Education</option>
                        <option value=4>Food & Drink</option>
                        <option value=5>Health</option>
                        <option value=6>History</option>
                        <option value=7>Horror</option>
                        <option value=8>Others</option>
                        <option value=9>Poetry</option>
                        <option value=10>Romance</option>
                        <option value=11>Science Fiction & Fantasy</option>
                        <option value=12>Sport</option>
                    </select>
                </div>
                <div class="center-div">
                    <button class="btn" type="submit">Add Product</button>
                </div>
            </form>
        </div>
    </main>
    <%-include('../includes/end')%>